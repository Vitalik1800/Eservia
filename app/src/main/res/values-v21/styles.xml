<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog</item>
    </style>

    <style name="HomeActionMenuTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SeekBarFeedback" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorInactive</item>
        <item name="android:progressTint">@color/transparent</item>
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="android:colorControlNormal">@color/colorInactive</item>
    </style>

    <style name="CommonActionButtonStyle">
        <item name="android:background">@drawable/background_button_try_again</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CommonInputLabelStyle">
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="CommonEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColorHint">@color/colorInactive</item>
    </style>

    <style name="CommonEditTextMultilineStyle">
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:maxLines">3</item>
        <item name="android:lines">3</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light_secondary</item>
        <item name="android:textColorHint">@color/colorInactive</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="CommonCardHolderStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">@dimen/card_elevation</item>
    </style>

</resources>

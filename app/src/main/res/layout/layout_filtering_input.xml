<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackgroundDefault"
    android:paddingLeft="@dimen/window_left_right_margins"
    android:paddingRight="@dimen/window_left_right_margins"
    app:layout_scrollFlags="scroll">

    <TextView
        android:id="@+id/tvFilteringInputTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:text="@string/show_promotions_in"
        android:textColor="@color/black_light_secondary"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvFilteringInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFilteringInput"
        android:layout_width="182dp"
        android:layout_height="34dp"
        android:background="@drawable/background_common_button_resto_white_grey_border"
        android:ellipsize="end"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingStart="36dp"
        android:paddingEnd="20dp"
        android:text="@string/all_cities"
        android:textColor="#757575"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivFilteringInput"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_location_input"
        app:layout_constraintBottom_toBottomOf="@id/tvFilteringInput"
        app:layout_constraintLeft_toLeftOf="@id/tvFilteringInput"
        app:layout_constraintTop_toTopOf="@id/tvFilteringInput"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/ivFilteringInputTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/triangle"
        app:layout_constraintBottom_toBottomOf="@id/tvFilteringInput"
        app:layout_constraintRight_toRightOf="@id/tvFilteringInput"
        app:layout_constraintTop_toTopOf="@id/tvFilteringInput"
        tools:ignore="ContentDescription,ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>

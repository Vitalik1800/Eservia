<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackgroundDefault"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackgroundDefault"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        tools:background="@color/windowBackgroundDefault">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/windowBackgroundDefault"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/ivToolbarBackground"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_background_default"
                app:layout_collapseMode="parallax"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/toolbar_background"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:alpha="0.8"
                android:background="@drawable/business_page_beauty_toolbar_back"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <com.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/erlHeader"
                style="@style/CommonCardHolderStyle"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="52dp"
                app:ael_duration="140"
                app:ael_expanded="true"
                app:ael_interpolator="decelerate"
                app:ael_orientation="vertical"
                app:borderWidth="0dp"
                app:layout_collapseMode="parallax"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHeader"
                    style="@style/CommonCardStyle"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:selectableItemBackground">

                        <ImageView
                            android:id="@+id/ivBusinessImageShadow"
                            style="@style/CommonBusinessPhotoShadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="ContentDescription,ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/ivBusinessImage"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_business_photo_placeholder_beauty"
                            tools:ignore="ContentDescription,ImageContrastCheck" />

                        <RelativeLayout
                            android:id="@+id/rlBusinessInfoContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/ivBusinessImage">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <TextView
                                    android:id="@+id/tvBusinessName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_medium"
                                    android:letterSpacing="-0.02"
                                    android:maxLines="1"
                                    android:textColor="#363938"
                                    android:textSize="@dimen/text_size_medium"
                                    tools:text="CHOP-CHOP" />

                                <TextView
                                    android:id="@+id/tvAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_medium"
                                    android:letterSpacing="-0.02"
                                    android:maxLines="1"
                                    android:textColor="#757575"
                                    android:textSize="@dimen/text_size_small"
                                    tools:text="Київ,Антоновича 19/21" />

                                <TextView
                                    android:id="@+id/tvDistance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_medium"
                                    android:letterSpacing="-0.02"
                                    android:maxLines="1"
                                    android:textColor="#757575"
                                    android:textSize="@dimen/text_size_small"
                                    android:visibility="gone"
                                    tools:text="10 км від Вас"
                                    tools:visibility="visible" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp">

                                    <com.eservia.simpleratingbar.SimpleRatingBar
                                        android:id="@+id/rbRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srb_borderColor="@color/gold"
                                        app:srb_fillColor="@color/gold"
                                        app:srb_isIndicator="true"
                                        app:srb_numberOfStars="5"
                                        app:srb_rating="0"
                                        app:srb_starSize="13dp"
                                        app:srb_stepSize="0.5"
                                        tools:ignore="TooDeepLayout" />

                                    <TextView
                                        android:id="@+id/tvRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="6dp"
                                        android:layout_toEndOf="@+id/rbRating"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/roboto_medium"
                                        android:letterSpacing="-0.02"
                                        android:maxLines="2"
                                        android:textColor="#757575"
                                        android:textSize="@dimen/text_size_small_10"
                                        tools:text="3.1/5" />

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </com.expandablelayout.ExpandableRelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="48dp"
                android:paddingEnd="8dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/icon_nav_back_dark"
                app:title=""
                tools:ignore="RtlSymmetry">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/tvToolbarTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="-0.05"
                            android:maxLines="1"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="#363938"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="Frisor" />

                        <TextView
                            android:id="@+id/tvToolbarSubTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="-0.05"
                            android:maxLines="1"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="#bdbdbd"
                            android:textSize="@dimen/text_size_small_10"
                            android:visibility="gone"
                            tools:text="ул. Пушкинская 9б, 10:00-21:00"
                            tools:visibility="gone" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextColor="@color/colorInactive" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="SpeakableTextPresentCheck" />

    <include
        layout="@layout/layout_resto_menu_delivery_book_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:visibility="invisible" />

    <include
        layout="@layout/layout_common_booking_button"
        android:layout_width="@dimen/common_booking_button_width"
        android:layout_height="@dimen/common_booking_button_height"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="@dimen/window_left_right_margins"
        android:layout_marginTop="@dimen/common_booking_button_margin_top"
        android:layout_marginRight="@dimen/window_left_right_margins"
        android:layout_marginBottom="@dimen/common_booking_button_margin_bottom"
        android:visibility="invisible"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

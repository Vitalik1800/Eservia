<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">

    <TextView
        android:id="@+id/tvServiceGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/window_left_right_margins"
        android:layout_marginEnd="@dimen/window_left_right_margins"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="3"
        android:textAllCaps="true"
        android:textColor="@color/black_light_secondary"
        android:textSize="@dimen/text_size_small"
        tools:text="Стрижка" />

    <include
        layout="@layout/item_booking_beauty_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvServiceGroup"
        android:layout_marginStart="@dimen/window_left_right_margins"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/window_left_right_margins"
        android:layout_marginBottom="4dp" />

</RelativeLayout>

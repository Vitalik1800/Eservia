<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCardHolderRatingSelector"
    style="@style/CommonCardHolderStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/window_left_right_margins"
    android:layout_marginTop="9dp"
    android:layout_marginRight="@dimen/window_left_right_margins"
    android:layout_marginBottom="9dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContainerRatingSelector"
        style="@style/CommonCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRateBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="-0.03"
                android:maxLines="1"
                android:text="@string/rate_this_place"
                android:textAllCaps="true"
                android:textColor="#363938"
                android:textSize="@dimen/text_size_small"
                 />

            <TextView
                android:id="@+id/tvQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRateBusiness"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="-0.03"
                android:maxLines="1"
                android:text="@string/estimate_quality"
                android:textAllCaps="false"
                android:textColor="#363938"
                android:textSize="@dimen/text_size_small"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvQuality"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingStart="20dp"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:ignore="RtlSymmetry,SpeakableTextPresentCheck"
                tools:listitem="@layout/item_business_feedback_beauty_rating_selector_star" />

            <SeekBar
                android:id="@+id/sbQuality"
                style="@style/SeekBarFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvQuality"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="32dp"
                android:max="5"
                android:progress="5"
                android:thumb="@drawable/route" />

            <TextView
                android:id="@+id/tvPurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sbQuality"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="-0.03"
                android:maxLines="1"
                android:text="@string/estimate_purity"
                android:textAllCaps="false"
                android:textColor="#363938"
                android:textSize="@dimen/text_size_small"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPurity"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingStart="20dp"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:ignore="RtlSymmetry,SpeakableTextPresentCheck"
                tools:listitem="@layout/item_business_feedback_beauty_rating_selector_star" />

            <SeekBar
                android:id="@+id/sbPurity"
                style="@style/SeekBarFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvPurity"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="32dp"
                android:max="5"
                android:progress="5"
                android:thumb="@drawable/route" />

            <TextView
                android:id="@+id/tvConvenience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sbPurity"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="-0.03"
                android:maxLines="1"
                android:text="@string/estimate_convenience"
                android:textAllCaps="false"
                android:textColor="#363938"
                android:textSize="@dimen/text_size_small"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvConvenience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvConvenience"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingStart="20dp"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:ignore="RtlSymmetry,SpeakableTextPresentCheck"
                tools:listitem="@layout/item_business_feedback_beauty_rating_selector_star" />

            <SeekBar
                android:id="@+id/sbConvenience"
                style="@style/SeekBarFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvConvenience"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="32dp"
                android:max="5"
                android:progress="5"
                android:thumb="@drawable/route" />

            <RelativeLayout
                android:id="@+id/rlRatingTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sbConvenience"
                android:layout_marginTop="20dp"
                android:minHeight="45dp"
                android:visibility="visible"
                tools:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    tools:ignore="RelativeOverlap">

                    <com.eservia.simpleratingbar.SimpleRatingBar
                        android:id="@+id/rbTotalRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        app:srb_borderColor="@color/gold"
                        app:srb_fillColor="@color/gold"
                        app:srb_isIndicator="true"
                        app:srb_numberOfStars="5"
                        app:srb_rating="0"
                        app:srb_starSize="13dp"
                        app:srb_stepSize="0.5" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@+id/rbTotalRating"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="-0.05"
                        android:maxLines="2"
                        android:textColor="#757575"
                        android:textSize="@dimen/text_size_small_10"
                        tools:text="3.1/5" />

                </RelativeLayout>

                <View
                    android:id="@+id/ratingTotalSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="#dddddd">

                </View>

                <TextView
                    android:id="@+id/tvYourEstimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing="-0.03"
                    android:maxLines="1"
                    android:text="@string/your_estimation"
                    android:textAllCaps="false"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_medium" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

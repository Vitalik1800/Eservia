<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlLoginContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackgroundDefault"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_background_login"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fillViewport="true"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/auth_side_padding"
                android:paddingRight="@dimen/auth_side_padding">

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/logo_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo_vertical"
                    tools:ignore="ImageContrastCheck" />

                <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.eservia.picker.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showNameCode="true"
                        app:ccp_textSize="16sp" />

                    <EditText
                        android:id="@+id/etPhone"
                        style="@style/CommonEditTextAuthStyle"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:autofillHints=""
                        android:hint="@string/phone_hint"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:textColorHint="#757575" />
                </LinearLayout>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="20dp">

                    <com.eservia.picker.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showNameCode="true"
                        app:ccp_textSize="16sp" />

                    <!--
                       <EditText
                            android:id="@+id/etPhone"
                            style="@style/CommonEditTextAuthStyle"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="2"
                            android:autofillHints=""
                            android:hint="@string/phone_hint"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="20"
                            android:textColorHint="#757575" />-->

                    <EditText
                        android:id="@+id/etPhone"
                        style="@style/CommonEditTextAuthStyle"
                        android:layout_width="140dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="2"
                        android:autofillHints=""
                        android:hint="@string/phone_hint"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:textColorHint="#757575" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPassword"
                        style="@style/CommonEditTextAuthStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="20dp"
                        android:autofillHints=""
                        android:hint="@string/password_hint"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword" />

                    <CheckBox
                        android:id="@+id/cbShowPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="9dp"
                        android:button="@drawable/checkbox_password_selector"
                        android:minWidth="48dp"
                        android:minHeight="48dp" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btnLogin"
                    style="@style/CommonAcceptButtonAuthStyle"
                    android:layout_width="@dimen/auth_accept_button_width"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/signIn_btn"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/btnForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22dp"
                    android:background="@null"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/btn_foorgot_password"
                    android:textColor="#8D6E63"
                    android:textSize="@dimen/text_size_small" />

                <include layout="@layout/or_social_layout" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="26dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@null"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/not_yet_registered"
                        android:textAlignment="center"
                        android:textColor="#8D6E63"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/btnCreateAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@null"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/registration_btn"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_small"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="invisible" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

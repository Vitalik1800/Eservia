<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rlPlaceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp">

        <ImageView
            android:id="@+id/ivPlaceHolderLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/base_20"
            android:src="@drawable/search_failed"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:id="@+id/tvPlaceHolderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPlaceHolderLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/base_30"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="-0.03"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:src="@drawable/ic_placeholder_my_bookings_archive"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#3b3b3b"
            android:textSize="@dimen/text_size_medium"
            tools:text="За вашим запитом нічого не знайдено" />

        <Button
            android:id="@+id/btnPlaceHolderButton"
            style="@style/AuthButtonStyle"
            android:layout_width="@dimen/common_button_width"
            android:layout_height="@dimen/common_button_height"
            android:layout_below="@+id/tvPlaceHolderLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            tools:text="Reload" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </RelativeLayout>

</merge>

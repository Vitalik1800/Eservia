<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCardHolder"
    style="@style/CommonCardHolderStyle"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="@dimen/window_left_right_margins"
    android:layout_marginTop="18dp"
    android:layout_marginRight="@dimen/window_left_right_margins">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContainer"
        style="@style/CommonCardStyle"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBusinessImageShadow"
                style="@style/CommonBusinessPhotoShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/ivBusinessImage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_business_photo_placeholder_beauty"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <RelativeLayout
                android:id="@+id/rlBook"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:minWidth="38dp">

                <ImageView
                    android:id="@+id/ivBook"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_business_beauty_book"
                    tools:ignore="ContentDescription,ImageContrastCheck"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/btnBooking"
                    style="@style/CommonBookingButtonRoundStyle"
                    android:layout_width="@dimen/common_booking_button_round_height"
                    android:layout_height="@dimen/common_booking_button_round_height"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:paddingLeft="@dimen/common_booking_button_round_padding"
                    android:paddingRight="@dimen/common_booking_button_round_padding"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnFavoriteOn"
                    style="@style/CommonBookingButtonStyle"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/background_common_booking_button_white"
                    android:drawableStart="@drawable/ic_favorite_on_red"
                    android:paddingStart="13dp"
                    android:paddingEnd="9dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnFavoriteOff"
                    style="@style/CommonBookingButtonStyle"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/background_common_booking_button_white"
                    android:drawableStart="@drawable/icon_favourites_add_beauty"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivIconNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/icon_arrow_grey"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlBusinessInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/rlBook"
                android:layout_toEndOf="@+id/ivBusinessImage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/tvBusinessName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="-0.02"
                        android:maxLines="1"
                        android:textColor="#363938"
                        android:textSize="@dimen/text_size_medium"
                        tools:text="CHOP-CHOP" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="-0.02"
                        android:maxLines="1"
                        android:textColor="#757575"
                        android:textSize="@dimen/text_size_small"
                        tools:text="Київ,Антоновича 19/21" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="-0.02"
                        android:maxLines="1"
                        android:textColor="#757575"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"
                        tools:text="10 км від Вас"
                        tools:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <com.eservia.simpleratingbar.SimpleRatingBar
                            android:id="@+id/rbRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            app:srb_borderColor="@color/gold"
                            app:srb_fillColor="@color/gold"
                            app:srb_isIndicator="true"
                            app:srb_numberOfStars="5"
                            app:srb_rating="0"
                            app:srb_starSize="13dp"
                            app:srb_stepSize="0.5" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="6dp"
                            android:layout_toEndOf="@+id/rbRating"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="-0.02"
                            android:maxLines="2"
                            android:textColor="#757575"
                            android:textSize="@dimen/text_size_small_10"
                            tools:text="3.1/5" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

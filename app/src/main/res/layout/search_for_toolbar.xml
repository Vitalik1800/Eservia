<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlSearchForToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_scrollFlags="scroll"
    tools:background="@color/colorPrimary"
    tools:visibility="visible">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSearch"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/ivSearchCancel"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="@dimen/base_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/ivSearchIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_search_input"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/ivSearchIcon"
                android:autofillHints=""
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_regular"
                android:hint="@string/search_business_name"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingEnd="18dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black_light"
                android:textColorHint="#757575"
                android:textSize="@dimen/text_size_medium"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivSearchCancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_cross_bold"
        tools:ignore="ContentDescription,ImageContrastCheck" />

</RelativeLayout>

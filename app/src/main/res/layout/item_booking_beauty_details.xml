<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/ivStaffImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:background="@drawable/user_man_big"
        android:src="@drawable/user_man_big"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <RelativeLayout
        android:id="@+id/rlStaffAndServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/ivStaffImage"
        android:minHeight="48dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tvStaffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="-0.03"
                android:maxLines="3"
                android:paddingEnd="12dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#464948"
                android:textSize="@dimen/text_size_small"
                tools:text="Сергей Давидко"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tvService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="-0.03"
                android:maxLines="3"
                android:paddingEnd="12dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#757575"
                android:textSize="@dimen/text_size_small"
                tools:ignore="RtlSymmetry"
                tools:text="2-ур Лечение проблемной кожи - акне и  постанке, 30 хв" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPriceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlStaffAndServiceName"
        android:minHeight="32dp">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:padding="4dp"
            android:src="@drawable/icon_cross_red"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/ivDelete"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="-0.03"
            android:maxLines="1"
            android:paddingEnd="6dp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#757575"
            android:textSize="@dimen/text_size_large"
            tools:ignore="RtlSymmetry"
            tools:text="USD" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tvCurrency"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="-0.03"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#757575"
            android:textSize="@dimen/text_size_large"
            tools:text="350" />

    </RelativeLayout>

</RelativeLayout>

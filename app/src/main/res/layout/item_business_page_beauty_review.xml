<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCardHolderReview"
    style="@style/CommonCardHolderStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/window_left_right_margins"
    android:layout_marginTop="@dimen/window_left_right_margins"
    android:layout_marginRight="@dimen/window_left_right_margins">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContainerReview"
        style="@style/CommonCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">

            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/ivUserPic"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_man_big"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <RelativeLayout
                    android:id="@+id/rlName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/rlMark"
                    android:layout_toEndOf="@+id/ivUserPic">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="11dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="-0.02"
                        android:maxLines="2"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/black_light_secondary"
                        android:textSize="@dimen/text_size_medium"
                        tools:text="Станислав" />

                    <TextView
                        android:id="@+id/tvPlaceMarkTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvUserName"
                        android:layout_marginStart="12dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="-0.02"
                        android:maxLines="2"
                        android:text="@string/assessment_of_the_institution"
                        android:textAllCaps="false"
                        android:textColor="#757575"
                        android:textSize="@dimen/text_size_small" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlMark"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="-0.01"
                        android:maxLines="1"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="#757575"
                        android:textSize="@dimen/text_size_small"
                        tools:text="11.29.2017 10:22" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDate"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="12dp">

                        <com.eservia.simpleratingbar.SimpleRatingBar
                            android:id="@+id/rbRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/tvRating"
                            app:srb_borderColor="@color/gold"
                            app:srb_fillColor="@color/gold"
                            app:srb_isIndicator="true"
                            app:srb_numberOfStars="5"
                            app:srb_rating="0"
                            app:srb_starSize="11dp"
                            app:srb_stepSize="0.5" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="6dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="-0.02"
                            android:maxLines="2"
                            android:textColor="#757575"
                            android:textSize="@dimen/text_size_small"
                            tools:text="3.1/5" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <com.eservia.expantabletextview.views.ExpandableTextView
                android:id="@+id/tvComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlHeader"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_regular"
                android:letterSpacing="-0.02"
                android:maxLines="5"
                android:paddingBottom="6dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#757575"
                android:textSize="@dimen/text_size_medium"
                app:animation_duration="250"
                tools:text="Вечерние прически, милировние, окрашивание, свадебные прически, стрижка мужская, укладка, маникюр. Вечерние прически, милировние, окрашивание, свадебные прически, стрижка мужская, укладка, маникюр." />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

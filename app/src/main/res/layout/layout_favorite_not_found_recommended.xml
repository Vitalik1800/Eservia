<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlPlaceHolderRecommended"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/ivPlaceHolderLogoRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/favourites"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/tvPlaceHolderLabelRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPlaceHolderLogoRecommended"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:text="@string/placeholder_message_not_found_favorites_recommended"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black_light_secondary"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tvPlaceHolderRecommendedVisitedPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlaceHolderLabelRecommended"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/window_left_right_margins"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/window_left_right_margins"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/visited_places"
        android:textAllCaps="true"
        android:textColor="@color/black_light_secondary"
        android:textSize="@dimen/text_size_small" />

</RelativeLayout>

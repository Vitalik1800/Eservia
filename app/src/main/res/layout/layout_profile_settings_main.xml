<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCardHolderSettingsMain"
    style="@style/CommonCardHolderStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/window_left_right_margins"
    android:layout_marginTop="10dp"
    android:layout_marginRight="@dimen/window_left_right_margins"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContainerSettingsMain"
        style="@style/CommonCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tvNameLabel"
                    style="@style/CommonInputLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/name"
                    tools:ignore="RelativeOverlap" />

                <EditText
                    android:id="@+id/etName"
                    style="@style/CommonEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNameLabel"
                    android:layout_marginEnd="30dp"
                    android:autofillHints=""
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColorHint="#757575"
                    tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:rotation="25"
                    android:src="@drawable/icon_edit"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

            </RelativeLayout>

            <View
                style="@style/CommonSeparatorStyle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlName" />

            <RelativeLayout
                android:id="@+id/rlSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlName"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tvSurnameLabel"
                    style="@style/CommonInputLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/surname"
                    tools:ignore="RelativeOverlap" />

                <EditText
                    android:id="@+id/etSurname"
                    style="@style/CommonEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSurnameLabel"
                    android:layout_marginEnd="30dp"
                    android:autofillHints=""
                    android:hint="@string/surname"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColorHint="#757575"
                    tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:rotation="25"
                    android:src="@drawable/icon_edit"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

            </RelativeLayout>

            <View
                style="@style/CommonSeparatorStyle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlSurname" />

            <RelativeLayout
                android:id="@+id/rlPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlSurname"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tvPhoneLabel"
                    style="@style/CommonInputLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/phone" />

                <EditText
                    android:id="@+id/etPhone"
                    style="@style/CommonEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPhoneLabel"
                    android:layout_marginEnd="30dp"
                    android:autofillHints=""
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:text=""
                    android:textColorHint="#757575"
                    tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

            </RelativeLayout>

            <View
                style="@style/CommonSeparatorStyle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlPhone" />

            <RelativeLayout
                android:id="@+id/rlEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlPhone"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tvEmailLabel"
                    style="@style/CommonInputLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/email"
                    tools:ignore="RelativeOverlap" />

                <EditText
                    android:id="@+id/etEmail"
                    style="@style/CommonEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEmailLabel"
                    android:layout_marginEnd="30dp"
                    android:autofillHints=""
                    android:hint="@string/email"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textColorHint="#757575"
                    tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:rotation="25"
                    android:src="@drawable/icon_edit"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

            </RelativeLayout>

            <View
                style="@style/CommonSeparatorStyle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlEmail" />

            <RelativeLayout
                android:id="@+id/rlPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlEmail"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tvPasswordLabel"
                    style="@style/CommonInputLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/password"
                    tools:ignore="RelativeOverlap" />

                <EditText
                    android:id="@+id/etPassword"
                    style="@style/CommonEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPasswordLabel"
                    android:layout_marginEnd="30dp"
                    android:autofillHints=""
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:text="************"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/icon_arrow_grey"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

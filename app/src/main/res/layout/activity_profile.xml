<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackgroundDefault"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        tools:background="@color/windowBackgroundDefault">

        <RelativeLayout
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:paddingEnd="8dp"
                app:navigationIcon="@drawable/icon_nav_back_dark"
                app:title=""
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/base_14"
                    android:layout_marginBottom="@dimen/base_14"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing="-0.02"
                    android:text="@string/profile"
                    android:textAllCaps="true"
                    android:textColor="@color/black_light_secondary"
                    android:textSize="@dimen/text_size_medium"
                     />

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvContentHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackgroundDefault"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvProfileBack"
                    style="@style/CommonCardStyle"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_marginLeft="@dimen/window_left_right_margins"
                    android:layout_marginRight="@dimen/window_left_right_margins">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rlProfileBack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:background="@drawable/background_profile_header_woman"
                            tools:background="@color/blue" />

                        <ImageView
                            android:id="@+id/ivProfileBack"
                            android:layout_width="match_parent"
                            android:layout_height="94dp"
                            android:alpha="0.5"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription,ImageContrastCheck" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="6dp">

                    <RelativeLayout
                        android:id="@+id/rlAccountPicture"
                        android:layout_width="65dp"
                        android:layout_height="65dp">

                        <ImageView
                            android:id="@+id/ivAccountPicture"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:contentDescription="@string/account_picture"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user_man_big"
                            tools:ignore="ImageContrastCheck" />

                        <View
                            android:id="@+id/avatar_background"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:alpha="0.2"
                            android:background="@drawable/background_profile_avatar" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="4dp"
                            android:rotation="0"
                            android:src="@drawable/icon_edit_white"
                            tools:ignore="ContentDescription,ImageContrastCheck" />

                    </RelativeLayout>

                    <ProgressBar
                        android:id="@+id/pbAvatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvTitleUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="-0.02"
                android:maxLines="3"
                android:textAllCaps="false"
                android:textColor="@color/black_light_secondary"
                android:textSize="@dimen/text_size_medium"
                tools:text="Сергій Коцюбко" />

            <include layout="@layout/layout_profile_settings_main" />

            <include layout="@layout/layout_profile_settings_additional" />

            <include layout="@layout/layout_profile_settings_social" />

            <include layout="@layout/layout_profile_settings_logout" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pbProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

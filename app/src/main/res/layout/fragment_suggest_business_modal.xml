<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackgroundDefault"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <RelativeLayout
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:paddingEnd="8dp"
                app:navigationIcon="@null"
                app:title=""
                tools:ignore="RtlSymmetry">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/tvToolbarTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="-0.02"
                            android:maxLines="1"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/black_light_secondary"
                            android:textSize="@dimen/text_size_medium"
                             />

                        <TextView
                            android:id="@+id/tvToolbarSubTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:letterSpacing="-0.01"
                            android:maxLines="1"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/colorInactive"
                            android:textSize="@dimen/text_size_small_10"
                            android:visibility="gone"
                            tools:text="ул. Пушкинская 9б, 10:00-21:00"
                            tools:visibility="gone" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/bottom_accept_layout_height">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/balls_bg_suggest_modal"
                tools:ignore="ContentDescription,ImageContrastCheck" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/suggest_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <include layout="@layout/layout_suggest_business_form" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/suggest_form"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/tvSuggestBusinessModalDescriptionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:letterSpacing="-0.01"
                    android:maxLines="3"
                    android:text="@string/suggest_business_standard_description_title"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black_light_secondary"
                    android:textSize="@dimen/text_size_medium"
                     />

                <TextView
                    android:id="@+id/tvSuggestBusinessModalDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSuggestBusinessModalDescriptionTitle"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:letterSpacing="-0.01"
                    android:maxLines="4"
                    android:text="@string/suggest_business_modal_description"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#8D6E63"
                    android:textSize="@dimen/text_size_small" />

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlDescription"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/favourites_suggest"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suggest_form">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/tvLater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="-0.01"
                        android:maxWidth="160dp"
                        android:maxLines="3"
                        android:text="@string/remind_me_later"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#2E7D32"
                        android:textSize="@dimen/text_size_medium" />

                    <Button
                        android:id="@+id/btnAdd"
                        style="@style/CommonActionButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@+id/tvLater"
                        android:background="@drawable/background_common_button_blue"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:text="@string/add"
                        android:textColor="#424242"
                        tools:ignore="TextContrastCheck" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pbProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

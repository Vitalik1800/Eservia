<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NoActionBar" tools:ignore="DuplicateDefinition">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="AppTheme.HomeActionMenuTextAppearance" tools:ignore="DuplicateDefinition">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SeekBarFeedback" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorInactive</item>
        <item name="android:progressTint">@color/transparent</item>
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="android:colorControlNormal">@color/colorInactive</item>
    </style>

    <style name="AppTheme.CommonActionButtonStyle" tools:ignore="DuplicateDefinition">
        <item name="android:background">@drawable/background_button_try_again</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTheme.CommonInputLabelStyle">
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>


    <style name="AppTheme.BusinessPageBeautyTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="actionMenuTextAppearance">@style/HomeActionMenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/HomeActionMenuTextAppearance</item>
    </style>

    <style name="AppTheme.CommonEditTextStyle" tools:ignore="DuplicateDefinition">
        <item name="android:background">@null</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColorHint">@color/colorInactive</item>
    </style>

    <style name="AppTheme.CommonEditTextMultilineStyle" tools:ignore="DuplicateDefinition">
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:maxLines">3</item>
        <item name="android:lines">3</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light_secondary</item>
        <item name="android:textColorHint">@color/colorInactive</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="AppTheme.CommonCardHolderStyle" tools:ignore="DuplicateDefinition">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">@dimen/card_elevation</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="acceptFormButtonStyle">@style/AcceptFormButtonStyle</item>
        <item name="bookItemStyle">@style/BookItemStyle</item>
        <item name="hourItemStyle">@style/HourItemStyle</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="listPreferredItemHeightSmall">53dp</item>
        <!--<item name="android:textColorPrimary">@color/white</item>-->
        <!--<item name="android:textColorSecondary">@color/white</item>-->
        <item name="android:borderlessButtonStyle">@style/BorderlessButtonSimpleText</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:importantForAutofill" tools:ignore="NewApi">noExcludeDescendants</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.NoActionBar.InverseControls" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">@color/gray_300</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="HomeTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="actionMenuTextAppearance">@style/HomeActionMenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/HomeActionMenuTextAppearance</item>
    </style>

    <style name="BusinessPageBeautyTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/statusBarColorGray</item>
        <item name="actionMenuTextAppearance">@style/HomeActionMenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/HomeActionMenuTextAppearance</item>
    </style>

    <style name="ProfileTheme" parent="BusinessPageBeautyTheme">
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="HomeActionMenuTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AboutTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/gray_200</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="BorderlessButtonSimpleText" parent="Widget.AppCompat.Button.Borderless">
        <item name="textAllCaps">true</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/text_color_borderless</item>
    </style>

    <style name="AcceptFormButtonStyle">
        <item name="android:background">@drawable/accept_button_background_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="BookItemStyle">
        <item name="android:background">@drawable/background_book_service</item>
        <item name="android:tint">?colorPrimaryDark</item>
    </style>

    <style name="HourItemStyle">
        <item name="android:background">@drawable/background_item_hours</item>
    </style>

    <style name="AuthButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/login_button_background_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="CommonActionButtonStyle">
        <item name="android:background">@drawable/background_button_try_again</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>

    <style name="CommonBookingButtonRoundStyle" parent="CommonBookingButtonStyle">
        <item name="android:background">@drawable/background_common_booking_button_round</item>
    </style>

    <style name="CommonBookingNextButtonStyle">
        <item name="android:background">@drawable/background_common_booking_button</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:maxLines">1</item>
